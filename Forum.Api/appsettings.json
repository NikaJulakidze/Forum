{
  "ConnectionStrings": {
    "default": "Server=(localdb)\\MSSQLLocalDB; Database=MyForum; Trusted_Connection=True;"
  },

  "AppSettings": {
    "BaseAddress": "https://localhost:44326/api"
  },

  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },

    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "D:\\Projects\\Logs\\ForumLog\\Logs.txt",
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss.fff} {Message}{NewLine:1}{Exception:1}"
        }
      }
    ]
  },

  "AllowedHosts": "*"
}
